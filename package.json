{
  "name": "@hexagon/webauthn",
  "version": "0.9.3",
  "description": "Slim Webauthn library with ES6, Node and Deno support.",
  "author": "Hexagon <github.com/hexagon>",
  "license": "MIT",
  "contributors": [],
  "homepage": "https://hexagon.github.io/webauthn",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexagon/webauthn"
  },
  "bugs": {
    "url": "https://github.com/hexagon/webauthn/issues"
  },
  "files": [
    "src/common/*",
    "src/node/*",
    "types/*",
    "SECURITY.md"
  ],
  "keywords": [
    "webauthn",
    "fido2",
    "ctap",
    "passwordless",
    "authentication",
    "yubikey",
    "windows hello",
    "android"
  ],
  "scripts": {
    "test": "uvu test test.webauthn.js",
    "test:coverage": "c8 --include=src npm test",
    "test:lint": "eslint src/**/*.js test/**/*.js",
    "test:lint:fix": "eslint --fix src/**/*.js test/**/*.js",
    "build": "npm update && npm run build:precleanup && npm run test:lint && npm run build:typings && npm run test:coverage",
    "build:ci": "npm run test:lint && npm run build:typings && npm run test:coverage",
    "build:precleanup": "(rm -rf types/* || rd /S /Q types)",
    "build:typings": "tsc",
    "build:docs": "(rm -rf docs/* || rd /S /Q docs) && jsdoc -c .jsdoc.json",
    "test:lint:deno": "deno fmt --check test/deno src/deno",
    "test:lint:deno:fix": "deno fmt test/deno src/deno",
    "test:deno": "deno test test/deno"
    
  },
  "type": "module",
  "main": "./src/node/webauthn.js",
  "module": "./src/node/webauthn.js",
  "types": "types/webauthn.d.ts",
  "exports": {
    ".": {
      "import": "./src/node/webauthn.js",
      "require": "./src/node/webauthn.js"
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "c8": "^7.10.0",
    "eslint": "^8.2.0",
    "jsdoc": "^3.6.7",
    "jsdoc-chameleon-template": "^1.0.2",
    "klon": "^0.11.0",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2"
  },
  "dependencies": {
    "jwk-to-pem": "^2.0.5",
    "psl": "^1.8.0"
  }
}
