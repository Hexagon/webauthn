{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "double"
        ],
        "semi": [
            2,
            "always"
        ],
        "complexity": [
            2,
            22
        ],
        "linebreak-style": 0,
        "no-var": 1
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "ignorePatterns": ["docs/*"],
    "globals": {
        "define": false,
        "describe": false,
        "it": false
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended"
}